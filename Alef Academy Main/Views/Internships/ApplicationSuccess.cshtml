@{
    ViewBag.Title = "Thank You for Applying";
    Layout = "~/Views/Shared/_Layout.cshtml";  // Assuming you have a shared layout
}

<style>
    .thank-you-container {
        text-align: center;
        padding: 50px 20px;
        font-family: 'Arial', sans-serif;
    }

    .thank-you-title {
        font-size: 2.5rem;
        color: #3E4997; /* Same color as in your example */
        margin-bottom: 20px;
    }

    .thank-you-message {
        font-size: 1.25rem;
        color: #333;
        margin-bottom: 40px;
    }

    .thank-you-image img {
        max-width: 100%;
        height: auto;
    }
</style>

<div class="thank-you-container">
    <h1 class="thank-you-title">Thank You for Applying!</h1>
    <p class="thank-you-message">
        We've received your application and our team is reviewing it. You'll hear from us via email soon.
    </p>
    <div class="thank-you-image">
        <img src="~/img/waiting for response.png" alt="Thank You Illustration" />
    </div>
</div>

<script>
    // Redirect to home after 5 seconds
    setTimeout(function () {
        window.location.href = '@Url.Action("Index", "Home")';
    }, 5000); // 5000 milliseconds = 5 seconds
</script>


