@model Alef_Academy_Main.Models.Internships

@{
    ViewData["Title"] = "Internship Application";
}

<div class="container mt-4">
    <div class="card border-dark">
        <div class="card-header bg-dark text-white">
            <h2>Apply For Internship</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="position" class="control-label"></label>
                    <input asp-for="position" class="form-control" />
                    <span asp-validation-for="position" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="name" class="control-label"></label>
                    <input asp-for="name" class="form-control" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="email" class="control-label"></label>
                    <input asp-for="email" class="form-control" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CvFile" class="control-label"></label>
                    <input asp-for="CvFile" type="file" class="form-control" />
                    <span asp-validation-for="CvFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="portfoliolink" class="control-label"></label>
                    <input asp-for="portfoliolink" class="form-control" />
                    <span asp-validation-for="portfoliolink" class="text-danger"></span>
                </div>

                <h3>Screening Questions</h3>

                <div class="form-group">
                    <label asp-for="isawareofunpaid" class="control-label">Are you aware that this is an unpaid position?</label>
                    <select asp-for="isawareofunpaid" class="form-control">
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                    <span asp-validation-for="isawareofunpaid" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="isavailableasap" class="control-label">Are you available to start ASAP?</label>
                    <select asp-for="isavailableasap" class="form-control">
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                    <span asp-validation-for="isavailableasap" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="iscommittothreemonths" class="control-label">The internship is at least 3 months from once you start – agreed?</label>
                    <select asp-for="iscommittothreemonths" class="form-control">
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                    <span asp-validation-for="iscommittothreemonths" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="isawareofcommitment" class="control-label">Are you aware of the commitment required?</label>
                    <select asp-for="isawareofcommitment" class="form-control">
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                    <span asp-validation-for="isawareofcommitment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Apply" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
