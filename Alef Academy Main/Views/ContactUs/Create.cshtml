@model Alef_Academy_Main.Models.ContactUs

@{
    ViewData["Title"] = "Contact Us";
}

<style>
    .form-container {
        background-color: lightgray; /* Grey background color */
        background: url('../img/background.jpg');
        padding: 20px; /* Add padding for spacing */
        border: 2px solid #ccc; /* Add a border for separation */
        border-radius: 8px; /* Rounded corners */
    }

    .form-control {
        background-color: #ffffff; /* White background for inputs */
    }

    label.control-label {
        color: white; /* White color for labels */
    }
</style>

<div class="container mt-4">
    <h2 class="text-center mb-4 text-black">New Contact Inquiry</h2>

    <div class="row">
        <div class="col-md-6 offset-md-3 form-container">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="name" class="control-label">Name</label>
                    <input asp-for="name" class="form-control border-primary" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="email" class="control-label">Email</label>
                    <input asp-for="email" class="form-control border-primary" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="message" class="control-label">Message</label>
                    <textarea asp-for="message" class="form-control border-primary" rows="5"></textarea>
                    <span asp-validation-for="message" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="inquirydate" class="control-label">Inquiry Date</label>
                    <input asp-for="inquirydate" class="form-control border-primary" />
                    <span asp-validation-for="inquirydate" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
