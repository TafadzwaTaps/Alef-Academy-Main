<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Alef_Academy_Main</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Alef_Academy_Main.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-footer-color border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="logo d-flex align-items-center">
                    <img src="~/img/logo.jpeg" alt="ALEF Online Academy" style="width: 50px; height: auto; border-radius: 50%;">
                </div>
                <a class="navbar-brand text-white ms-3" asp-area="" asp-controller="Home" asp-action="Index">ALEF Online Academy</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" id="coursesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Courses
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="coursesDropdown">
                                <li><a class="dropdown-item" href="#">Sciences</a></li>
                                <li><a class="dropdown-item" href="#">Language Studies</a></li>
                                <li><a class="dropdown-item" href="#">Coding</a></li>
                                <li><a class="dropdown-item" href="#">Math</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Internships">Internships Available</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Products">Products</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" id="languagesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Languages
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="languagesDropdown">
                                <li><a class="dropdown-item" href="#" onclick="translatePage('en')">English</a></li>
                                <li><a class="dropdown-item" href="#" onclick="translatePage('ar')">Arabic</a></li>
                                <li><a class="dropdown-item" href="#" onclick="translatePage('pl')">Polish</a></li>
                                <li><a class="dropdown-item" href="#" onclick="translatePage('de')">German</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Contact">Contact Us</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div>
            <h3>About Us</h3>
            <p>ALEF Online Academy is dedicated to providing high-quality education in various subjects.</p>
        </div>
        <div>
            <h3>Socials</h3>
            <p>Follow us on:</p>
            <p>
                <a href="#">Facebook</a> |
                <a href="#">Twitter</a> |
                <a href="#">Instagram</a>
            </p>
        </div>
        <div>
            <p>Contact us at: <a href="mailto:info@alefacademy.com">info@alefacademy.com</a></p>
        </div>
        <div class="container">
            &copy; 2024 - ALEF Online Academy - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
