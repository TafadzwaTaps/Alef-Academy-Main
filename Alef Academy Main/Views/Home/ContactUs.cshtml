@model Alef_Academy_Main.Models.ContactUs

@{
    ViewData["Title"] = "New Contact Inquiry";

}

<style>
    .thin-border {
        border: 3px solid #000; /* Adjust border color as needed */
    }
</style>

<div class="container mt-4 p-4 border rounded" style="background-color: #ffffff;">
    <h2 class="text-center mb-4 text-primary">New Contact Inquiry</h2>

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Name</label>
                    <input asp-for="Name" class="form-control border-primary" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control border-primary" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Message" class="control-label">Message</label>
                    <textarea asp-for="Message" class="form-control border-primary" rows="5"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="InquiryDate" class="control-label">Inquiry Date</label>
                    <input asp-for="InquiryDate" class="form-control border-primary" />
                    <span asp-validation-for="InquiryDate" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
