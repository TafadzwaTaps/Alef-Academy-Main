@{
    ViewData["Title"] = "About Us";
}

<style>
    .about-container {
        max-width: 900px;
        margin: 0 auto;
        background: #f8f9fa;
        border: 2px solid #007bff;
        border-radius: 10px;
        padding: 30px;
        color: #333;
        backdrop-filter: blur(4px);
        margin-bottom: 40px;
    }

        .about-container h1 {
            text-align: center;
            color: #007bff;
            margin-bottom: 20px;
        }

        .about-container p {
            font-size: 18px;
            line-height: 1.6;
            margin-bottom: 20px;
        }

    .contact-info {
        text-align: center;
        color: #333;
        margin-top: 20px;
    }

        .contact-info h3 {
            margin-bottom: 20px;
        }

        .contact-info p {
            font-size: 16px;
            margin-bottom: 10px;
        }

        .contact-info i {
            margin-right: 10px;
        }

    .key-info {
        margin-top: 30px;
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
    }

    .info-box {
        background: #e9ecef;
        border-radius: 5px;
        padding: 20px;
        width: 48%;
        margin-bottom: 20px;
        text-align: center;
    }

        .info-box h4 {
            margin-bottom: 10px;
            color: #007bff;
        }
</style>

<div class="about-container">
    <h1>About Alef Online Academy</h1>
    <p>Alef Online Academy is dedicated to empowering lifelong learning 🎓💻. We offer comprehensive courses in languages, sciences, and technology to help students and professionals develop essential skills. Our programs include:</p>
    <ul>
        <li>🌍 Language learning</li>
        <li>🔬 Math, physics, and other sciences</li>
        <li>💻 Coding and computer science</li>
    </ul>
    <p>We're committed to personalized learning, with interactive lessons, expert instructors, and dedicated support. 🧑‍🏫 Join our vibrant community and unlock your full potential! ✨</p>
    <div class="key-info">
        <div class="info-box">
            <h4>Founded</h4>
            <p>2023</p>
        </div>
        <div class="info-box">
            <h4>Headquarters</h4>
            <p>Krakow, Poland</p>
        </div>
        <div class="info-box">
            <h4>Industry</h4>
            <p>Language Schools</p>
        </div>
        <div class="info-box">
            <h4>Company Size</h4>
            <p>2-10 employees</p>
        </div>
        <div class="info-box">
            <h4>Website</h4>
            <p><a href="http://www.alefonlineacademy.com" target="_blank">www.alefonlineacademy.com</a></p>
        </div>
        <div class="info-box">
            <h4>LinkedIn Members</h4>
            <p>8 associated members</p>
        </div>
    </div>
    <div class="contact-info">
        <h3>Contact Information</h3>
        <p><i class="fa fa-phone"></i> +48 578 773 222</p>
        <p><i class="fa fa-envelope"></i> info@alefonlineacademy.com</p>
    </div>
</div>
